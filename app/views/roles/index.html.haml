= provide(:active_nav, 'roles')

%div.float-right.btn-group{role: 'group'}
  = link_to(new_role_path, class: 'btn btn-light') do
    = fa_icon('plus')
    = ' New Role'

%h1 Roles

%table.table.table-striped
  %thead
    %tr
      %th Name
  %tbody
    - @roles.each do |role|
      %tr
        %td= link_to(role.name, role)