= breadcrumb({ label: 'Users', url: users_path },
             { label: @user, url: user_path(@user) })

%div.float-right.btn-group{role: 'group'}
  = link_to(edit_user_path(@user),
            class: 'btn btn-light') do
    = fa_icon('pencil')
    = ' Edit'
  = link_to(user_path,
            class: 'btn btn-danger',
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this user? This cannot be undone.' }) do
    = fa_icon('trash')
    = ' Delete'

%h1= @user